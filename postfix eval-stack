#include<stdio.h>
#include<string.h>
#define MAX 50
struct stack
{
	int top;
	int a[MAX];
} s;

void push(int c)
{
	s.a[++s.top]=c;
}

int pop()
{
	if(s.top==-1)
	{
		return 0;
	}

	else
	{
		return s.a[s.top--];
	}
}

int eval(char *exp)
{
	int i=0;
	while (exp[i]!='\0')
	{
		if(isdigit(exp[i]))
		{
			push(exp[i]-'0');
		}
		else
		{
			int x=pop();
			int y=pop();
			switch(exp[i])
			{
			case '+':
				push (x+y);
				break;
			case '-':
				push (x-y);
				break;
			case '*':
				push (x*y);
				break;
			}
		case '/':
			push (x/y);
			break;
		}
		i++;
	}
	return pop();
}

int main()
{
	s.top=-1;
	char exp[MAX];
	printf("\nEnter the postfix expression:");
	scanf("%s",exp);
	printf("Postfix evaluation: %d\n", eval(exp));
	return 0;
}
